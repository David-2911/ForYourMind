{
  "name": "mindfulme-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "MindfulMe Backend API Server",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "node --watch --loader ts-node/esm src/index.ts",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external --minify --sourcemap",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "migrate": "drizzle-kit migrate",
    "test": "echo 'No tests configured yet' && exit 0",
    "health": "node -e \"fetch('http://localhost:5000/health').then(r=>r.json()).then(console.log).catch(console.error)\""
  },
  "dependencies": {
    "@mindfulme/shared": "file:../shared",
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "esbuild": "^0.25.9",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
