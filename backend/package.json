{
  "name": "mindfulme-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "MindfulMe Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --watch --loader ts-node/esm src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.17",
    "pg": "^8.16.3",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.1",
    "esbuild": "^0.25.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
