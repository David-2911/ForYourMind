{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./server/dist",
    "rootDir": "./server",
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": false,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client", "dist"]
}
