{
  "name": "@mindfulme/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "MindfulMe - Digital Wellbeing Platform Monorepo",
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "// DEVELOPMENT": "Development commands",
    "dev": "concurrently -n \"SHARED,BACKEND,FRONTEND\" -c \"yellow,green,cyan\" \"npm run dev:shared\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:shared": "cd shared && npm run build -- --watch",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "npm run dev",
    
    "// BUILD": "Production build commands",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    
    "// TYPE CHECKING": "TypeScript validation",
    "check": "npm run check:shared && npm run check:backend && npm run check:frontend",
    "check:shared": "cd shared && npm run check",
    "check:backend": "cd backend && npm run check",
    "check:frontend": "cd frontend && npm run check",
    
    "// TESTING": "Run tests",
    "test": "npm run test:shared && npm run test:backend && npm run test:frontend",
    "test:shared": "echo 'No tests in shared yet'",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "echo 'No tests in frontend yet'",
    "test:ci": "npm run check && npm run test",
    
    "// DATABASE": "Database management",
    "db:push": "cd backend && drizzle-kit push",
    "db:migrate": "cd backend && drizzle-kit migrate",
    "db:studio": "cd backend && drizzle-kit studio",
    "db:generate": "cd backend && drizzle-kit generate",
    
    "// DEPLOYMENT": "Deployment and production scripts",
    "deploy:build": "npm run clean && npm install && npm run build",
    "deploy:check": "npm run check && npm run test:ci",
    "deploy:backend": "npm run build:shared && npm run build:backend && cd backend && npm run start:prod",
    "deploy:render": "npm run deploy:build && npm run db:migrate",
    "health:check": "cd backend && npm run health",
    
    "// INSTALLATION": "Install dependencies",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "postinstall": "npm run build:shared",
    
    "// CLEANUP": "Clean build artifacts",
    "clean": "npm run clean:shared && npm run clean:backend && npm run clean:frontend && npm run clean:root",
    "clean:shared": "cd shared && rm -rf dist node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:root": "rm -rf node_modules",
    
    "// PRODUCTION": "Production commands",
    "start": "cd backend && npm start",
    "preview": "cd frontend && npm run preview",
    
    "// UTILITIES": "Utility commands",
    "lint": "echo 'Add linting later'",
    "format": "echo 'Add formatting later'",
    "verify": "npm run check && npm run build && echo 'âœ… All checks passed!'"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/David-2911/ForYourMind.git"
  },
  "keywords": [
    "mental-health",
    "wellness",
    "mindfulness",
    "employee-wellbeing",
    "monorepo"
  ]
}
