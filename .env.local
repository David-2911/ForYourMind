# Development Environment Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=dev-jwt-secret-replace-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Database Configuration
# For development, we use SQLite
USE_SQLITE=true
SQLITE_DB_PATH=./data/db.sqlite

# Uncomment and configure to use Neon PostgreSQL in development
# DATABASE_URL=postgresql://username:password@your-neon-db-host/dbname
# USE_SQLITE=false

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Security Settings
COOKIE_SECRET=dev-cookie-secret-replace-in-production
