# MindfulMe Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# DATABASE CONFIGURATION
# ======================

# PostgreSQL Connection (Production - Neon/Render/Supabase)
# Example: postgresql://user:pass@host:5432/dbname?sslmode=require
DATABASE_URL=

# SQLite (Development - Local)
# Uncomment to use SQLite instead of PostgreSQL
# USE_SQLITE=true
# SQLITE_DB_PATH=./data/db.sqlite

# ======================
# AUTHENTICATION
# ======================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-secure-jwt-secret-key-replace-this-in-production

# Token Expiration Times
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Cookie Secret (for session management)
COOKIE_SECRET=your-secure-cookie-secret-replace-this-in-production

# ======================
# SERVER CONFIGURATION
# ======================

# Node Environment (development, production, test)
NODE_ENV=production

# Backend API Port
PORT=5000

# CORS Origin (Frontend URL - no trailing slash!)
# Development: http://localhost:5173
# Production: https://your-frontend.vercel.app
CORS_ORIGIN=https://your-frontend.vercel.app

# ======================
# FRONTEND ENVIRONMENT
# ======================

# API Base URL (used by frontend to call backend)
# Development: http://localhost:5000
# Production: https://your-backend.render.com
VITE_API_URL=http://localhost:5000

# Vite Node Environment
VITE_NODE_ENV=development

# ======================
# EMAIL CONFIGURATION (Optional)
# ======================

# SMTP Server Settings
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@mindfulme.com

# ======================
# THIRD-PARTY SERVICES (Optional)
# ======================

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

# Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ======================
# DEVELOPMENT ONLY
# ======================

# Enable debug logging
# DEBUG=true

# Disable authentication (for testing only!)
# DISABLE_AUTH=false

