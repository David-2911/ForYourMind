# Application Configuration
NODE_ENV=production
PORT=5000

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key-replace-this-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Database Configuration
# SQLite Config
USE_SQLITE=true
SQLITE_DB_PATH=./data/db.sqlite

# Neon Database Config (optional, only if using cloud database)
# DATABASE_URL=postgresql://username:password@your-neon-db-host/dbname

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Security Settings
COOKIE_SECRET=your-secure-cookie-secret-replace-this-in-production
